{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "Default": "Data Source=Data/MyCourse.db"
  },

  "courses": {
    "PerPage": 5,
    "InHome":  3,
    "Order": {
      "By": "Rating",
      "Ascending": false,
      "Allow": [ "Id","Title", "Rating", "CurrentyPrice" ]
    }
  },

  "MemoryCache": {

  },

  "ResponseCache": {
    "Home": {
      "Duration": 60,
      "Location": "Client",
      "varyByQueryKeys": [ "page" ]
    }
  }
}
