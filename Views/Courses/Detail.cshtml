@model CourseDetailViewModel
<section class="course-info">
    <div class="row">
        <div class="col-md-9">
            <h1>@Model.Title</h1>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <a class="btn btn-warning btn-lg btn-block subscribe-course" href="#">Iscriviti</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9" html-sanitize>
            <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Laboriosam facilis totam sed, ducimus sit, non earum quasi rerum atque asperiores iure quia voluptatem aut sint suscipit aspernatur optio? Perspiciatis, sapiente?</p>
            <p>Temporibus esse ducimus eaque minus dolorum vel nobis aliquid labore possimus accusantium, mollitia quod maiores velit aut dolore facere deleniti! Vero dolore temporibus reprehenderit harum quos quia aperiam ipsa suscipit?</p>
            <p>Itaque, velit soluta rem officiis accusantium, laudantium voluptatum cum dicta nulla ipsam ipsum esse eos id blanditiis impedit vel praesentium similique dolore quos beatae magni vitae. Velit quis eos sequi!</p>
            <p>Fugiat, vitae necessitatibus! Molestiae, recusandae fuga modi amet officiis reprehenderit quibusdam dolorem veniam fugiat! Delectus eaque, placeat laborum, nihil vero at eligendi, labore molestiae quidem vitae et. Nemo, officiis aperiam?</p>
        </div>
        <div class="col-md-3">
            <aside>
                <author>di @Model.Author</author>
                <div class="rating" title="@Model.Rating">
                    @for(int j = 1; j <= 5; j++){
                        if(@Model.Rating >= j){
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                            </svg>
                        }else if(@Model.Rating > j -1){
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-half" viewBox="0 0 16 16">
                                <path d="M5.354 5.119 7.538.792A.516.516 0 0 1 8 .5c.183 0 .366.097.465.292l2.184 4.327 4.898.696A.537.537 0 0 1 16 6.32a.548.548 0 0 1-.17.445l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256a.52.52 0 0 1-.146.05c-.342.06-.668-.254-.6-.642l.83-4.73L.173 6.765a.55.55 0 0 1-.172-.403.58.58 0 0 1 .085-.302.513.513 0 0 1 .37-.245l4.898-.696zM8 12.027a.5.5 0 0 1 .232.056l3.686 1.894-.694-3.957a.565.565 0 0 1 .162-.505l2.907-2.77-4.052-.576a.525.525 0 0 1-.393-.288L8.001 2.223 8 2.226v9.8z"/>
                            </svg>
                        }else{
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                                    <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                            </svg>
                        } 
                    }          
                </div>
                <div class="price">
                    @Model.CurrentPrice<br/>
                    @if(!@Model.CurrentPrice.Equals(@Model.FullPrice)){
                        <s>@Model.FullPrice</s>
                    }
                </div>
                <img src="@Model.ImagePath" class="img-fluid course-image" alt="@Model.Title" asp-append-version="true">
            </aside>
        </div>
    </div>
</section>

<section class="course-lessons">
	<h2>Lezioni (@Model.Lessons.Count)</h2>
	@foreach (var lesson in Model.Lessons)
	{
        <hr>
        <div class="row">
            <div class="col-md-9 d-flex align-items-center">    
                <a href="#">@lesson.Title</a>  
            </div>
            <div class="col-md-3 d-flex align-items-center justify-content-end lesson-duration">
                <i class="far fa-clock"></i><time>@lesson.Duration.ToString("m'm 's's'")</time>
            </div>
        </div>
	}
    <hr>
    <div class="row course-duration">
		<div class="col-md-9 d-flex align-items-center">
            Totale
        </div>
        <div class="col-md-3 d-flex align-items-center justify-content-end">
            <i class="far fa-clock"></i><time>@Model.TotalDuration.ToString("h'h 'm'm 's's'")</time>
        </div>
    </div>
</section>